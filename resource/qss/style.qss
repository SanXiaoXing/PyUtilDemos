/* QProgressBar Fluent Design Styles */
QProgressBar {
    background-color: #f3f2f1;
    border: none;
    border-radius: 2px;
    height: 4px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #0078d4;
    border-radius: 2px;
}

/* QMenuBar and QMenu Fluent Design Styles */
QMenuBar {
    background-color: #f3f2f1;
    border: none;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 14px;
    color: #323130;
}

QMenuBar::item {
    background-color: transparent;
    padding: 8px 12px;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background-color: #f8f9fa;
}

QMenuBar::item:pressed {
    background-color: #edebe9;
}

QMenu {
    background-color: #ffffff;
    border: 1px solid #e1dfdd;
    border-radius: 4px;
    padding: 4px;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 14px;
    color: #323130;
}

QMenu::item {
    padding: 8px 12px;
    border-radius: 2px;
    margin: 1px;
}

QMenu::item:selected {
    background-color: #f8f9fa;
}

QMenu::separator {
    height: 1px;
    background-color: #e1dfdd;
    margin: 4px 8px;
}

/* QToolTip Fluent Design Styles */
QToolTip {
    background-color: #323130;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 8px 12px;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 12px;
}

/* QStatusBar Fluent Design Styles */
QStatusBar {
    background-color: #f3f2f1;
    border-top: 1px solid #e1dfdd;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 12px;
    color: #605e5c;
}

/* QSplitter Fluent Design Styles */
QSplitter::handle {
    background-color: #e1dfdd;
}

QSplitter::handle:horizontal {
    width: 1px;
}

QSplitter::handle:vertical {
    height: 1px;
}

QSplitter::handle:hover {
    background-color: #0078d4;
}

