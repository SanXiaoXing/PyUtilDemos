

/* QFluentWidgets Inspired Fluent Design Styles */
/* Compatible with Python 3.8.10+ */
/* Note: Qt QSS doesn't support CSS variables, colors are hardcoded */

QComboBox {
    font-size: 14px;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    background-color: #ffffff;
    border: 1px solid #e1dfdd;
    border-radius: 4px;
    padding: 8px 12px;
    min-height: 20px;
    color: #323130;
}

QComboBox:hover {
    border-color: #0078d4;
    background-color: #f8f9fa;
}

QComboBox:focus {
    border-color: #0078d4;
    border-width: 2px;
    outline: none;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
    background: transparent;
}

QComboBox::down-arrow {
    image: url(./assets/icon/down_arrow.svg);
    width: 12px;
    height: 12px;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    margin-right: 8px;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    border: 1px solid #e1dfdd;
    border-radius: 4px;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
    outline: none;
}


QLineEdit {
    background-color: #ffffff;
    border: 1px solid #e1dfdd;
    border-radius: 4px;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 14px;
    padding: 8px 12px;
    color: #323130;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
}

QLineEdit:hover {
    border-color: #0078d4;
    background-color: #f8f9fa;
}

QLineEdit:focus {
    border-color: #0078d4;
    border-width: 2px;
    outline: none;
    background-color: #ffffff;
}

QLineEdit:disabled {
    background-color: #f3f2f1;
    border-color: #e1dfdd;
    color: #a19f9d;
}


QPlainTextEdit {
    background-color: #ffffff;
    border: 1px solid #e1dfdd;
    border-radius: 4px;
    color: #323130;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 14px;
    padding: 8px 12px;
    line-height: 1.5;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
}

QPlainTextEdit:hover {
    border-color: #0078d4;
}

QPlainTextEdit:focus {
    border-color: #0078d4;
    border-width: 2px;
    outline: none;
}

QPlainTextEdit:disabled {
    background-color: #f3f2f1;
    border-color: #e1dfdd;
    color: #a19f9d;
}

QTreeWidget QHeaderView::section {
    background-color: #f3f2f1;
    border: none;
    border-bottom: 1px solid #e1dfdd;
    padding: 8px 12px;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #323130;
    height: 32px;
}

QTreeWidget {
    background-color: #ffffff;
    border: 1px solid #e1dfdd;
    border-radius: 4px;
    color: #323130;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 14px;
    outline: none;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
}

QTreeWidget::item {
    height: 36px;
    color: #323130;
    border-bottom: 1px solid #f3f2f1;
    padding: 8px 12px;
    border-radius: 2px;
}

QTreeWidget::item:hover {
    background-color: #f8f9fa;
    border-radius: 2px;
}

QTreeWidget::item:selected {
    background-color: #0078d4;
    color: #ffffff;
    border-radius: 2px;
}

QTreeWidget::item:selected:hover {
    background-color: #106ebe;
}



QGroupBox {
    background-color: #ffffff;
    border: 1px solid #e1dfdd;
    border-radius: 6px;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #323130;
    padding: 16px 12px 12px 12px;
    margin: 8px 0px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    background-color: #ffffff;
    color: #323130;
    font-weight: 600;
    left: 8px;
    top: -4px;
}

QTabWidget {
    background-color: #ffffff;
    border: none;
}

QTabWidget::pane {
    background-color: #ffffff;
    border: 1px solid #e1dfdd;
    border-radius: 4px;
    margin-top: -1px;
}

QTabWidget::tab-bar {
    alignment: left;
}

QTabBar::tab {
    background-color: #f3f2f1;
    border: 1px solid #e1dfdd;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 8px 16px;
    margin-right: 2px;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 14px;
    color: #605e5c;
    min-width: 80px;
}

QTabBar::tab:hover {
    background-color: #f8f9fa;
    color: #323130;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    color: #0078d4;
    border-bottom: 2px solid #0078d4;
    font-weight: 600;
}

QTabBar::tab:!selected {
    margin-top: 2px;
}

/* QTableWidget Fluent Design Styles */
QTableWidget {
    background-color: #ffffff;
    border: 1px solid #e1dfdd;
    border-radius: 4px;
    font-size: 14px;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    color: #323130;
    gridline-color: #f3f2f1;
    selection-background-color: #0078d4;
    selection-color: #ffffff;
    outline: none;
}

QTableWidget::item {
    padding: 8px 12px;
    border-bottom: 1px solid #f3f2f1;
    border-right: 1px solid #f3f2f1;
}

QTableWidget::item:hover {
    background-color: #f8f9fa;
}

QTableWidget::item:selected {
    background-color: #0078d4;
    color: #ffffff;
}

QHeaderView::section {
    background-color: #f3f2f1;
    border: none;
    border-bottom: 1px solid #e1dfdd;
    border-right: 1px solid #e1dfdd;
    padding: 8px 12px;
    font-size: 14px;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-weight: 600;
    color: #323130;
}

QHeaderView::section:hover {
    background-color: #f8f9fa;
}


/* QScrollBar Fluent Design Styles */
QScrollBar:vertical {
    background-color: #f3f2f1;
    width: 12px;
    border: none;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #c8c6c4;
    border: none;
    border-radius: 6px;
    min-height: 20px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #a19f9d;
}

QScrollBar::handle:vertical:pressed {
    background-color: #8a8886;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: transparent;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background: transparent;
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #f3f2f1;
    height: 12px;
    border: none;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: #c8c6c4;
    border: none;
    border-radius: 6px;
    min-width: 20px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #a19f9d;
}

QScrollBar::handle:horizontal:pressed {
    background-color: #8a8886;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: transparent;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    background: transparent;
    width: 0px;
}


/* QSlider Fluent Design Styles */
QSlider::groove:horizontal {
    height: 4px;
    background-color: #e1dfdd;
    border: none;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    width: 20px;
    height: 20px;
    background-color: #0078d4;
    border: 2px solid #ffffff;
    border-radius: 10px;
    margin: -8px 0;
}

QSlider::handle:horizontal:hover {
    background-color: #106ebe;
}

QSlider::handle:horizontal:pressed {
    background-color: #005a9e;
}

QSlider::sub-page:horizontal {
    background-color: #0078d4;
    border-radius: 2px;
}

QSlider::groove:vertical {
    width: 4px;
    background-color: #e1dfdd;
    border: none;
    border-radius: 2px;
}

QSlider::handle:vertical {
    width: 20px;
    height: 20px;
    background-color: #0078d4;
    border: 2px solid #ffffff;
    border-radius: 10px;
    margin: 0 -8px;
}

QSlider::handle:vertical:hover {
    background-color: #106ebe;
}

QSlider::handle:vertical:pressed {
    background-color: #005a9e;
}

QSlider::sub-page:vertical {
    background-color: #0078d4;
    border-radius: 2px;
}

/* QPushButton Fluent Design Styles */
QPushButton {
    background-color: #0078d4;
    border: none;
    border-radius: 4px;
    color: #ffffff;
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 14px;
    font-weight: 600;
    padding: 8px 16px;
    min-width: 80px;
    min-height: 32px;
}

QPushButton:hover {
    background-color: #106ebe;
}

QPushButton:pressed {
    background-color: #005a9e;
}

QPushButton:disabled {
    background-color: #f3f2f1;
    color: #a19f9d;
}

/* Secondary Button */
QPushButton[class="secondary"] {
    background-color: #f3f2f1;
    color: #323130;
    border: 1px solid #e1dfdd;
}

QPushButton[class="secondary"]:hover {
    background-color: #f8f9fa;
    border-color: #c8c6c4;
}

QPushButton[class="secondary"]:pressed {
    background-color: #edebe9;
    border-color: #a19f9d;
}

/* QCheckBox Fluent Design Styles */
QCheckBox {
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 14px;
    color: #323130;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 2px solid #605e5c;
    border-radius: 2px;
    background-color: #ffffff;
}

QCheckBox::indicator:hover {
    border-color: #0078d4;
}

QCheckBox::indicator:checked {
    border-color: #0078d4;
    image: url(./assets/icon/check.svg);
}

QCheckBox::indicator:checked:hover {
    background-color: transparent;
}

QCheckBox::indicator:disabled {
    background-color: #f3f2f1;
    border-color: #c8c6c4;
}

QCheckBox::indicator:checked:disabled {
    background-color: #c8c6c4;
    border-color: #c8c6c4;
    image: url(./assets/icon/check_disabled.svg);

}

QCheckBox:disabled {
    color: #a19f9d;
}

/* QRadioButton Fluent Design Styles */
QRadioButton {
    font-family: "Segoe UI", "Microsoft YaHei", sans-serif;
    font-size: 14px;
    color: #323130;
    spacing: 8px;
}

QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border: 2px solid #605e5c;
    border-radius: 8px;
    background-color: #ffffff;
}

QRadioButton::indicator:hover {
    border-color: #0078d4;
}

QRadioButton::indicator:checked {
    background-color: #0078d4;
    border-color: #0078d4;
